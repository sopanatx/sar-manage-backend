generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String  @id @default(uuid())
  username     String  @unique
  password     String
  passwordSalt String
  email        String
  userLevel    String?
  fullname     String?
  refreshToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

}

model listMenu {
  id       String @unique @default(uuid())
  menuName String
}

model semester {
  id           String   @unique @default(uuid())
  semesterName String   @unique
  isAvaliable  Boolean? @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model primaryMenu {
  id          String    @unique @default(uuid())
  primaryName String    @unique
  isAvaliable Boolean?  @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  subMenu     subMenu[]
}

model subMenu {
  id            String      @unique @default(uuid())
  subMenuName   String      @unique
  primaryMenuId String
  primaryMenu   primaryMenu @relation(fields: [primaryMenuId], references: [id])
}

enum userLevel {
  ADMIN
  STUDENT
  TEACHER
}
